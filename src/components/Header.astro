---
interface Props {
  title?: string;
}

const { title = "ДЕПХАБ" } = Astro.props;
---

<header class="header">
  <div class="header-content">
    <button class="header-icon" aria-label="Поиск">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
    </button>
    <div class="header-logo">
      {title}
    </div>
    <button class="header-avatar" aria-label="Профиль">
      <div class="avatar-circle"></div>
    </button>
  </div>
</header>

<style lang="scss">
  .header {
    background-color: #000;
    padding: $spacing-md $spacing-sm;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 480px;
    margin: 0 auto;
  }

  .header-icon,
  .header-avatar {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: $text-primary;
    padding: 0;
  }

  .header-logo {
    font-size: 18px;
    font-weight: 600;
    letter-spacing: 1px;
    border: 2px solid $text-primary;
    padding: $spacing-xs $spacing-sm;
  }

  .avatar-circle {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }
</style>

