---
interface Props {
  label?: string;
  labelColor?: string;
  title: string;
  subtitle?: string;
  buttonText?: string;
  gradient?: string;
  image?: string;
  imageSrc?: string;
}

const {
  label,
  labelColor = "yellow",
  title,
  subtitle,
  buttonText = "Получить",
  gradient = "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
  image,
  imageSrc,
} = Astro.props;
---

<div class="promo-banner" style={`background: ${gradient}`}>
  {label && <div class={`label ${labelColor}`}>{label}</div>}
  <div class="content">
    <div class="text-content">
      <h2 class="title">{title}</h2>
      {subtitle && <p class="subtitle">{subtitle}</p>}
      {buttonText && <button class="cta-button">{buttonText}</button>}
    </div>
    {
      imageSrc ? (
        <img src={imageSrc} alt={title} class="promo-image" />
      ) : image ? (
        <div class="image-placeholder">{image}</div>
      ) : null
    }
  </div>
</div>

<style lang="scss">
  .promo-banner {
    width: 100%;
    border-radius: $radius-lg;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .label {
    position: absolute;
    top: $spacing-md;
    left: $spacing-md;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
  }

  .label.yellow {
    background: $accent-yellow;
    color: #000;
  }

  .label.red {
    background: $accent-red;
    color: white;
  }

  .label.pink {
    background: #ff6b9d;
    color: white;
  }

  .content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .text-content {
    background: radial-gradient(black, transparent);
    padding: $spacing-lg;
    flex: 1;
    z-index: 2;
  }

  .title {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: $spacing-xs;
    line-height: 1.2;
  }

  .subtitle {
    font-size: 14px;
    opacity: 0.9;
    margin-bottom: $spacing-md;
  }

  .cta-button {
    background: #00a3ff;
    color: #f1f1f1f1;
    padding: $spacing-sm $spacing-lg;
    border-radius: $radius-lg;
    font-weight: 600;
    font-size: 14px;
  }

  .image-placeholder {
    width: 120px;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 48px;
    opacity: 0.3;
  }

  .promo-image {
    width: 100%;
    position: absolute;
  }

</style>
